@require '_animations'
@require '_colors'

nav
  background: bg-3
  padding: 12px 0px 13px 0px
  text-align: center
  overflow: hidden

  &>ul
    list-style: none
    margin: 0
    padding: 0
    display: flex
    flex-direction: row
    justify-content: center

    &>li
      display: inline-block
      padding: 0px 18px
      animation-name: slide-down
      animation-duration: 350ms
      animation-delay: 0s
      animation-iteration-count: 1
      animation-timing-function: ease

      &>a
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center
        color: font-primary

      img
        height: 52px
        width: 54px
        margin: 0 7px 6px

      span
        font-size: 11px

article
  background: rgba(bg-1, .87)
  padding: 37px 5vw
  display: flex
  flex-wrap: wrap
  flex-direction: row

  &>h2
    flex: 1 0 50%
    margin-top: 0

  &>p
    flex: 1 0 50%
    margin: 0
    color: font-muted
    font-size: 18px
    letter-spacing: 0.1em
    text-align: right

  h3
    margin-top: 0

  &>aside
    flex: 0 1 20%

    section+section
      margin-top: 20px

  section
    padding: 20px

  &>section
    flex: 1 0 0
    margin-left: 2vw

  dl
    display: flex
    flex-direction: row
    flex-wrap: wrap
    color: font-secondary

    span
      display: block
      margin: 5px 10px

    &>*
      border-bottom: 1px solid border-dark

    &>dt
      flex: 0 0 50%

    &>dd
      flex: 0 0 50%
      margin-left: auto
      text-align: right

  .inline-list
    justify-content: center
    text-align: center
