@require '_colors'

h1
  padding-bottom: .5rem
  border-bottom: 1px solid border-dark

article
  padding: 2rem 5vw 4rem

.about
  background: bg-2
  display: flex
  flex-direction: row
  flex-wrap: wrap

  @media (max-width: 500px)
    flex-direction: column

  section
    flex: 1 0 0
    margin-right: 2rem

  h1
    width: 100%

  aside
    width: 23%

    @media (max-width: 500px)
      width: 100%

  img
    height: auto
    width: 100%
    border: 1px solid border-dark

.ideals
  background: bg-5
  color: font-light

  h1
    border-color: border-light

  &>ul
    display: flex
    list-style: none
    padding: 2rem 0
    margin: 0
    flex-direction: column
    flex-wrap: wrap
    justify-content: space-around
    align-items: center

    &>li
      width: 66%
      box-sizing: border-box
      padding: 1rem
      display: flex
      flex-direction: row

      @media (max-width: 500px)
        flex-direction: column
        width: 100%

      &>h2
        width: 25%
        margin-right: 2rem

        @media (max-width: 500px)
          width: 100%
      &>p
        flex: 1 0 0

    &>li+li
      border-top: 1px solid border-light

  h2
    font-weight: 500

  p
    color: font-light-secondary


.crew

  .fa-twitter
    color: twitter
  .fa-facebook
    color: facebook
  .fa-linkedin
    color: linkedin
  .fa-instagram
    color: instagram
  .fa-globe
    color: blue

  &>ul
    padding: 1rem 0
    margin: 0
    display: flex
    list-style: none
    flex-direction: row
    flex-wrap: wrap
    justify-content: center

    @media (max-width: 500px)
      flex-direction: column

  &>ul>li
    display: flex
    flex-direction: column
    align-items: center
    background: bg-2
    margin: 0 1rem
    padding: 0 0 1rem
    border-bottom: 3px solid accent
    border-radius: 3px
    box-shadow: 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12)
    max-width: 385px

    img
      width: 100%
      background: dark-primary

    h2,h3
      color: font-light

    h2
      margin-top: -3.5rem

    h3
      margin-top: -1rem
      font-weight: 300

    p
      color: font-secondary
      padding: 0 1rem

      a
        color: font-secondary
        font-weight: bold

    ul
      margin-top: auto
