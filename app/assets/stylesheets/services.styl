@require '_colors'

article
  display: flex
  flex-direction: row
  flex-wrap: wrap
  padding: 37px 4vw

  @media (max-width: 500px)
    flex-direction: column

  &>h2
    flex: 1 0 auto
    width: 100%
    margin-top: 0

  &>section
    flex: 1 0 0

    &>h2
      text-align: center

    &>p
      padding: 20px

  section
    margin: 0 1vw

    @media (max-width: 500px)
      margin: 10px 0
