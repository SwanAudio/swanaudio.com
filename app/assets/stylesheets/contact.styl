@require '_colors'

a
  color: font-primary

  &>i.fa
    font-size: 1.5em

section
  display: flex
  flex-direction: row
  flex-wrap: wrap
  align-items: flex-start
  padding: 20px 5vw

  &>form, &>aside
    display: flex
    flex-direction: column
    margin: 10px
    padding: 2rem

  &>form
    flex: 3 0 0

    input, textarea
      margin-bottom: 15px

  &>aside
    flex: 1 0 0

    &>img
      height: 80px
      margin-bottom: 10px

    &>address
      font-style: normal
      color: font-secondary

      a
        text-transform: lowercase

      &>p
        margin: 0 0 10px

        &>i
          margin-right: 10px

        .fa-location-arrow
          color: orange
        .fa-envelope-o
          color: blue

    hr
      border: 0
      border-top: 1px solid border-dark
      width: 100%
      margin: 20px auto

    ul>li>a
      display: block
      text-align: center
      padding: 10px 0
      transition: linear 450ms background

      &:hover
        background: bg-3

      .fa-twitter
        color: twitter
      .fa-linkedin
        color: linkedin
      .fa-facebook
        color: facebook
      .fa-youtube
        color: youtube
      .fa-instagram
        color: instagram
